<%- include('partials/top') %>
<main aria-label="Contact Form">
  <h1>Contact Me</h1>
  <form id="contact-form" method="POST" action="/contact/submit" novalidate>

    <div>
      <label for="firstName">First Name:</label>
      <input type="text" id="firstName" name="firstName" autocomplete="given-name" required>
      <span class="validation" id="firstNameError" aria-live="polite"></span>
    </div>

    <div>
      <label for="lastName">Last Name:</label>
      <input type="text" id="lastName" name="lastName" autocomplete="family-name" required>
      <span class="validation" id="lastNameError" aria-live="polite"></span>
    </div>

    <div>
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" autocomplete="email" required>
      <span class="validation" id="emailError" aria-live="polite"></span>
    </div>

    <div>
      <label for="comments">Comments:</label>
      <textarea id="comments" name="comments"></textarea>
      <span class="validation" id="commentsError" aria-live="polite"></span>
    </div>

    <button type="submit">Submit</button>

  </form>
</main>

<script src="/js/contactValidation.js"></script>
<%- include('partials/bottom') %>